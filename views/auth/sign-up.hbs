
   <div id="signupBg" class="bg-image shadow-2-strong">
      <div class="mask" style="background-color: rgba(0, 0, 0, 0.139);">
        

<div id="form_signup">

  <h2>Signup</h2>

<form action="/signup" method="POST">

  <div class="form-group">
    <label for="formGroupExampleInput">Username</label>
    <input type="username" class="form-control" id="formGroupExampleInput" name="username" placeholder="Username">
  </div>

  <div class="form-group">
    <label for="formGroupExampleInput2">Email</label>
    <input type="email" class="form-control" id="formGroupExampleInput2" name="email" placeholder="Email">
  </div>

  <div class="form-group">
    <label for="formGroupExampleInput2">Password</label>
    <input type="password" class="form-control" id="formGroupExampleInput2" name="password" placeholder="******">
  </div>

  <button type="submit" class=" buttonStyle1">Create account</button>
{{! error message will be added here }}
    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}


  </form>
</div>
</div>
 </div>
